{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "https://locally-server.onrender.com/:match*"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://locally-server.onrender.com"
  }
}
